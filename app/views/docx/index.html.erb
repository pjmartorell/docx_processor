<%= form_with url: process_docx_path, local: true, html: { multipart: true, class: "bg-white shadow-lg rounded-lg p-8 mt-6", id: "document-form", data: { controller: "downloader", action: "submit->downloader#handleSubmit" } } do |form| %>
  <fieldset>
    <div class="mb-4">
      <%= form.label :files, "Selecciona els fitxers a processar (docx):", class: "block text-gray-700 text-sm font-medium mb-2" %>
      <%= form.file_field :files, multiple: true, accept: ".docx", class: "shadow border border-gray-300 rounded-lg w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:border-blue-300", data: { downloader_target: "fileInput" } %>
    </div>
    <div>
      <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition duration-200 flex items-center justify-center" id="submit-button" data-downloader-target="submitButton">
        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" data-downloader-target="spinner">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span data-downloader-target="buttonText">Processar</span>
      </button>
    </div>
  </fieldset>
<% end %>
