<%= form_with url: process_docx_path, local: true, html: { multipart: true, class: "bg-white shadow-lg rounded-lg p-8 mt-6", id: "document-form", data: { controller: "downloader", action: "submit->downloader#handleSubmit" } } do |form| %>
  <fieldset class="mb-6">
    <div class="mb-4">
      <%= form.label :files, "Selecciona els fitxers a processar (docx):", class: "block text-gray-700 text-sm font-medium mb-2" %>
      <%= form.file_field :files, multiple: true, accept: ".docx", class: "shadow border border-gray-300 rounded-lg w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:border-blue-300" %>
    </div>
    <div>
      <%= form.submit "Processar", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition duration-200", id: "submit-button", data: { "downloader-target": "submitButton" } %>
    </div>
  </fieldset>
<% end %>

